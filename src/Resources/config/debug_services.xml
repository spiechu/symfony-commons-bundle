<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <services>

        <service id="spiechu_symfony_commons.service.data_collector"
                 class="Spiechu\SymfonyCommonsBundle\Service\DataCollector"
                 public="false"
        >
            <argument type="service" id="router"/>
            <argument type="service" id="annotations.cached_reader"/>
            <argument type="service" id="controller_resolver"/>

            <tag name="kernel.event_subscriber"/>
            <tag name="data_collector" id="spiechu_symfony_commons.data_collector" template="@SpiechuSymfonyCommons/Collector/template.html.twig"/>
        </service>

        <service id="spiechu_symfony_commons.twig.data_collector_extension"
                 class="Spiechu\SymfonyCommonsBundle\Twig\DataCollectorExtension"
                 public="false"
        >
            <argument type="service" id="file_locator"/>

            <tag name="twig.extension"/>
        </service>

    </services>

</container>
